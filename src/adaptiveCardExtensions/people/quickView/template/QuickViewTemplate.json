{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder"       
    },
    {
      "type": "FactSet",
      "$data":"${peoples}",
      "facts": [
        {                       
          "title": "Title",
          "value": "${title}"
        },
        {                       
          "title": "First Name",
          "value": "${firstname}"
        },
        {                       
          "title": "Sur Name",
          "value": "${surname}"
        },          
        {                       
          "title": "Email",
          "value": "${mail}"
        }
      ],

      "separator": true 

    }     
  ] 
}